<h1> Sign up for Must Love Dogs Service</h1>
<% if flash[:errors] %>
  <% flash[:errors].each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :full_name %>
  <%= f.text_field :full_name %><br/>
  <%= f.label :email %>
  <%= f.email_field :email %><br/>
  <%= f.label :phone_number %>
  <%= f.phone_field :phone_number %><br/>
  <%= f.label :neighborhood %>
  <%= f.text_field :neighborhood %><br/>
  <%= f.submit %>
<% end %>
