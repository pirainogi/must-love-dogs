    <b>Dog:  </b><%=link_to dog.name, dog_path(dog) %><br>
    <b>Appointments:</b><br> <% @appointments = dog.appointments %>
    <% @appointments.each do |a| %>
      <%= a.find_caregiver.name + " - " + a.find_service.name %><br>
    <% end %><br>
    <% end %>
</ul>


